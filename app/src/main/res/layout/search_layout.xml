<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="15dp"
    android:gravity="center"
    android:background="@color/colorDarkGrey">

    <EditText
        android:gravity="center"
        android:id="@+id/search_bar"
        android:layout_width="355dp"
        android:layout_height="wrap_content"
        android:hint="@string/search_hint"
        android:padding = "10dp"
        android:layout_alignTop="@+id/magnify"
        android:layout_alignRight="@+id/search_button"
        android:layout_alignEnd="@+id/search_button"
        android:textColorHint="@color/white"
        android:textColor="@color/white"/>

    <ImageView android:id="@+id/magnify"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="3dp"
        android:adjustViewBounds="true"
        android:src="@drawable/icon_magnify"
        android:layout_alignLeft="@+id/search_bar"
        />
    <Spinner
        android:id="@+id/platform_chooser"
        android:layout_width="wrap_content"
        android:layout_gravity="right"
        android:layout_height="wrap_content"
       android:layout_marginRight="50dp"
        android:layout_toRightOf="@+id/search_bar"
        android:textColor="@color/white"
        android:background="@color/white"/>

    <Button
        android:id="@+id/search_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/search_bar"
        android:text="@string/search"
        />
    <Button
        android:id="@+id/messenger_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/search_button"
        android:text="@string/messenger"
        />
</RelativeLayout>